                        <a class="nav-link " asp-area="" asp-controller="Directeur" asp-action="index"><samp>Profile</samp></a>
                    </li>
                </ul>
            </div>

            <div class="flex-grow-end ">
                <a class="btn btn-danger" asp-controller="Directeur" asp-action="LogOut">Déconnecter</a>
            </div>
        </div>
    </nav>
</header>
<div class="LoginDiv">
    <div class="inputField">

        <div class="alert alert-primary" role="alert">
            <h1><samp class="text-primary">Actions et Details</samp></h1>
        </div>
            <h3>Plan Vendre Selectionner</h3>
            <div class="inputField">
                <hr />
                <h4> <samp>Informations</samp></h4>
                <dl class="row">
                    <dt class="col-sm-2">
                        <samp>Produit :</samp>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.produit.Nom)
                    </dd>
                    <dt class="col-sm-2">
                        <samp>Prix Vente :</samp>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Prix_Vondre) DH
                    </dd>
                    <dt class="col-sm-2">
                        <samp>Quantitié Vente :</samp>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Qnt_vondre)
                    </dd>
                    <dt class="col-sm-2">
                        <samp>Total Vente :</samp>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Total_Vondre) Dh
                    </dd>
                    <dt class="col-sm-2">
                        <samp>Date Vente :</samp>
                    </dt>
                    <dd class="col-sm-10">
                        @Model.DateVondre.ToString("dd/MM/yyyy HH:mm:ss")
                    </dd>
                </dl>
                <hr />
                <div class="buttonsDiv">
                    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model.id">Modifier</a>
                    <a class="btn btn-primary" asp-action="Index">Retour </a>
                </div>
            </div>
    </div>
</div>
<br />

