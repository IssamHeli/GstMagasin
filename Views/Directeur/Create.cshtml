@model TestHostAppAndBaseDonnes.Models.Directeur

@{
    ViewData["Title"] = "Register";
}

<header>
    <nav class="navbar navbar-expand-md navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand " asp-controller="Home" asp-action="Index">
                <img src="~/Images/GestionMagazinLogo.webp" alt="Logo" width="90" height="45" class="d-inline-block align-text-top">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-md-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class=" nav-item">
                        <a class="nav-link active" asp-controller="Home" asp-action="Index"> Accueille</a>
                    </li>

                    <li class=" nav-item">
                        <a href="#slideshow" class="nav-link "> Presentation</a>
                    </li>

                    <li class=" nav-item">
                        <a href="#" class="nav-link "> About us</a>
                    </li>

                    <li class=" nav-item">
                        <a href="#" class="nav-link "> contact</a>
                    </li>
                </ul>
                <div class="bntinscriheader">
                    <a asp-controller="Directeur" asp-action="Create" class="btn btn-success">S'inscrire</a>
                </div>
                <div class="dropdown">
                    <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Connecter
                    </button>
                    <ul class="dropdown-menu dropdown-menu-primary">
                        <li><a class="dropdown-item active" asp-controller="Directeur" asp-action="loginDirecteur">Directeur</a></li>
                        <li><a class="dropdown-item" asp-controller="Acheteur" asp-action="loginAcheteur">Magasinier</a></li>
                        <li><a class="dropdown-item" asp-controller="Vondoure" asp-action="loginVondoure">Vendeur</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
</header>
<div class="LoginDiv">
    <div class="inputField">
        <div class="inputField">
            <H2 class="text-danger"></H2>
            <div class="LoginDivVraix">
                <div class="imagediv animate-scroll">
                    <img src="~/Images/register.webp" alt="loginImage" />
                </div>
                <div class="RightDiv">

                    <div class="inputField">

                        <h1>Register</h1>

                        <h4>Directeur</h4>
                        <hr />
                        <div class="row">
                            <div class="col-md-4">
                                <form asp-action="Create">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="UserName" class="control-label"></label>
                                        <input asp-for="UserName" class="form-control" />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Password" class="control-label"></label>
                                        <input type="password" asp-for="Password" class="form-control" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="buttonsDiv">
                                        <input type="submit" value="Register" class="btn btn-success" />
                                        <a class="btn btn-primary" asp-controller="Home" asp-action="LoginSelect">Log In</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
