
@model IEnumerable<GstMagazin.Models.ProduitQnt0export>

@{
    ViewData["Title"] = "Produits Trouver";
}


<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="ProduitAcheteur" asp-action="Index">
                <img src="~/Images/GestionMagazinLogo.webp" alt="Logo" width="90" height="50" class="d-inline-block align-text-top">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                <ul class="navbar-nav flex-grow-center">

                    <li class="nav-item">
                        <a class="nav-link  " asp-area="" asp-controller="ProduitAffiche" asp-action="Index"><samp>les articles</samp></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active " asp-area="" asp-controller="ProduitAcheteur" asp-action="Index"><samp>Stock</samp></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  " asp-area="" asp-controller="Planvondre" asp-action="IndexForVendeur"><samp>PlanVentes</samp></a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link  " asp-area="" asp-controller="Acheteur" asp-action="IndexAcheteur"><samp>Profile</samp></a>
                    </li>
                </ul>
            </div>

            <div class="flex-grow-end ">
                <a class="btn btn-danger" asp-controller="Acheteur" asp-action="LogOut">Déconnecter</a>
            </div>
        </div>
    </nav>
</header>

<div class="LoginDiv">
    <div class="inputField">
        @if (@ViewBag.QuantiteNotTrouver != null)
        {
            <div class="alert alert-danger">
                <h1><samp class="text-danger">@ViewBag.QuantiteNotTrouver</samp></h1>

            </div>
            <h2><samp class="text-danger"> Verefier Bien La Quantite de Produit Que Vous Avez Chercher Par</samp></h2>
            <p>

                <a class="btn btn-primary" asp-action="Index">Retour </a>

            </p>

        }
        else
        {
            <div class="alert alert-info">
                <h4><samp class="text-info">@ViewBag.QuantiteChercher</samp></h4>
            </div>

            <p>
                <!--<a class="btn btn-primary export-btn">Exporter</a>-->
                <a class="btn btn-primary" asp-action="Index">Retour </a>
            </p>

            <div class="LoginDiv">
                <div class="inputField">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        <samp>Reference</samp>

                                    </th>
                                    <th>
                                        <samp>Nom</samp>
                                    </th>
                                    <th>
                                        <samp>Quantité Stock</samp>
                                    </th>
                                    <th>
                                        <samp>Categorie</samp>
                                    </th>
                                    <th>
                                        <samp>Lieu De Stock</samp>
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.produit.Reference)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.produit.Nom)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.produit.quantity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.produit.Categorie)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.produit.LieuDeStock)
                                        </td>
                                        <td>
                                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.produit.id">Actions</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        }




    </div>
</div>

