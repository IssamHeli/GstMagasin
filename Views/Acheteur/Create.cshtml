@{
    if (ViewBag.countacheteur != null)
    {
    <div class="LoginDiv">
        <div class="inputField">
            <div class="alert alert-success">
                <h1>Passer a Gstmagasin Premiume , avoir la disposition d'ajouter illimité des magasiniers</h1>
                <br />
                <div class="buttonsDivv">
                    <input type="radio" id="toggle" name="prix">
                    <h3 for="toggle"></h3>
                </div>

            </div>

            <br />
            <div class="buttonsDiv">
                <a class="btn btn-success" href="#">Passer  </a>
                <a class="btn btn-primary" asp-action="Index">Retour </a>
            </div>
        </div>
    </div>
    }
    else
    {
        <div class="LoginDiv">
            <div class="inputField">
                <div class="alert alert-secondary">
                    <h1><samp class="text-secondary">Ajouter Un Magasinier</samp> </h1>
                </div>
                <form asp-action="Create">

                    <div class="inputField">
                        <h4><samp>Informations :</samp> </h4>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                        <label asp-for="Password" class="control-label"></label>
                        <input type="text" asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <br />
                        <div class="buttonsDiv">
                            <input type="submit" value="Ajouter" class="btn btn-secondary" />
                            <a class="btn btn-primary" asp-action="Index">Retour Vers La Liste</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    }
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



