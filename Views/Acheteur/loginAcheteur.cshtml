@model TestHostAppAndBaseDonnes.Models.Acheteur
@{
    ViewData["Title"] = "Connexion - Magasinier";
}

<header>
    <nav class="navbar navbar-expand-md navbar-light bg-white border-bottom shadow-sm mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="~/Images/GestionMagazinLogo.webp" alt="Logo" width="90" height="45" class="d-inline-block align-text-top">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-md-inline-flex justify-content-between">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Home" asp-action="Index">Accueil</a>
                    </li>
                    <li><a href="/#Fonctionnalites" class="nav-link ">Fonctionnalités</a></li>
                    <li><a href="/#Features" class="nav-link ">Caractéristiques</a></li>
                    <li><a href="/#ContactUs" class="nav-link ">Contact</a></li>
                    <li><a href="" class="nav-link ">Blogs</a></li>

                </ul>
                <div class="dropdown">
                    <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Se connecter
                    </button>
                    <ul class="dropdown-menu dropdown-menu-primary">
                        <li><a class="dropdown-item" asp-controller="Directeur" asp-action="loginDirecteur">Directeur</a></li>
                        <li><a class="dropdown-item active" asp-controller="Acheteur" asp-action="loginAcheteur">Magasinier</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
</header>

<div id="ui-container">

    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-12 col-md-12 col-12">
                <div class="card shadow-sm p-4">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="imagediv animate-scroll">
                                <img src="~/Images/LoginImage.webp" alt="Login Image" class="img-fluid rounded">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-section">
                                <h2 class="text-primary mb-3">Connexion - Magasinier</h2>

                                <form asp-action="loginAcheteur">




                                    <input type="hidden" name="recaptcha_token2" id="recaptchaToken2" hidden/>

                                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                                    {
                                        <div class="alert alert-info">
                                            <h5>Note :</h5>
                                            <p>@Html.Raw(ViewBag.ErrorMessage.Replace("\n", "<br/>"))</p>
                                        </div>
                                    }

                                    @if (!string.IsNullOrEmpty(ViewBag.InfoIncorrect))
                                    {
                                        <div class="alert alert-warning">
                                            <h5>@ViewBag.InfoIncorrect</h5>
                                        </div>
                                    }

                                    <div class="mb-3">
                                        <label for="UserName" class="form-label">Nom d'utilisateur</label>
                                        <input asp-for="UserName" class="form-control" required placeholder="Entrez votre nom d'utilisateur" />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label for="Password" class="form-label">Mot de passe</label>
                                        <input asp-for="Password" type="password" class="form-control" required placeholder="Entrez votre mot de passe" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center">
                                        <button type="submit" class="btn btn-primary">Se connecter</button>
                                        <a href="#" class="text-decoration-none small">Mot de passe oublié ?</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <div class="container shadow pt-5 pb-4">
        <div class="container">
            
            <div class="row">
                <!-- Company Information -->
                <div class="col-md-4 mb-4">
                    <h5 class="text-primary">GSTMagasin</h5>
                    <p>Votre solution tout-en-un pour une gestion efficace de votre magasin. Optimisez vos opérations et augmentez votre productivité grâce à notre plateforme conçue pour les petites et grandes entreprises de vente au détail</p>
                </div>

                <!-- Quick Links -->
                <div class="col-md-4 mb-4">
                    <h5 class="text-primary">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="/" class="text-dark text-decoration-none">Accueil</a></li>
                        <li><a href="/#Fonctionnalites" class="text-dark text-decoration-none">Fonctionnalités</a></li>
                        <li><a href="/#Features" class="text-dark text-decoration-none">Caractéristiques</a></li>
                        <li><a href="/#ContactUs" class="text-dark text-decoration-none">Contactez-Nous</a></li>
                    </ul>
                </div>

                <!-- Contact Information -->
                <div class="col-md-4 mb-4">
                    <h5 class="text-primary">Contactez-nous</h5>
                    <p><strong>Email:</strong> <a href="mailto:heli.issame@gmail.com" class="text-dark text-decoration-none">heli.issame@gmail.com</a></p>
                </div>
            </div>

            <hr class="my-4 border-light">

            <div class="row">
                <!-- Social Media -->
                <div class="col text-center">
                    <h5 class="text-primary mb-3">Suivez-nous</h5>
                    <a href="" class="text-dark me-3"><i class="fab fa-facebook-f"></i></a>
                    <a href="" class="text-dark me-3"><i class="fab fa-twitter"></i></a>
                    <a href="" class="text-dark me-3"><i class="fab fa-linkedin-in"></i></a>
                    <a href="" class="text-dark"><i class="fab fa-instagram"></i></a>
                </div>
            </div>

            <div class="text-center mt-4">
                <p>&copy; 2024 GSTMagasin. All Rights Reserved.</p>
            </div>
        </div>
    </div>
    <script>
        window.onload = function ()
        {

            // Show the loading UI

            document.getElementById("ui-container").style.pointerEvents = 'none';
            grecaptcha.ready(function () {

                grecaptcha.execute('6LeGeqgqAAAAANsy_SLnKR6UmF4gMXghd5V97fCc', { action: 'loginAcheteur' }).then(function (token) {

                        document.getElementById('recaptchaToken2').value = token;

                        document.getElementById("ui-container").style.pointerEvents = 'auto';

                });
            });

        };
    </script>
