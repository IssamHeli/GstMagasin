@model TestHostAppAndBaseDonnes.Models.Produit

@{
    ViewData["Title"] = "Vondre";
}
<header>
    <nav class="navbar navbar-expand-md  navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Produit" asp-action="Index">
                <img src="~/Images/GestionMagazinLogo.webp" alt="Logo" width="90" height="50" class="d-inline-block align-text-top">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-md-inline-flex justify-content-center">
                <ul class="navbar-nav flex-grow-center">

                    <li class="nav-item">
                        <a class="nav-link  " asp-area="" asp-controller="ProduitAffiche" asp-action="Index"><samp>les articles</samp></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  active" asp-area="" asp-controller="produit" asp-action="Index"><samp>Stock</samp></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  " asp-area="" asp-controller="Magasin" asp-action="Index"><samp>Analyse</samp></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-controller="PlanVondre" asp-action="Index"><samp>PlansVentes</samp></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-controller="PlanAchat" asp-action="Index"><samp>PlansAchats</samp></a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-controller="Acheteur" asp-action="Index"><samp>Magasinier</samp></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-controller="Directeur" asp-action="index"><samp>Profile</samp></a>
                    </li>
                </ul>
            </div>

            <div class="flex-grow-end ">
                <a class="btn btn-danger" asp-controller="Directeur" asp-action="LogOut">Déconnecter</a>
            </div>
        </div>
    </nav>
</header>
<div class="LoginDiv">
    <div class="inputField">
        <div class="alert alert-success" role="alert">
            <h1><samp class="text-success">Vendre</samp></h1>
        </div>
        <h2>Produit Selectionner</h2>
        <hr />
        <div class="inputField">
            <form asp-action="Vondre">
                <div class="inputField">
                    <h4><samp>Information :</samp></h4>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="id" />
                     <label asp-for="Reference" class="control-label"></label>
                    <input asp-for="Reference" class="form-control" readonly />
                    <span asp-validation-for="Reference" class="text-danger"></span>
                    
                    <label asp-for="Nom" class="control-label"></label>
                    <input asp-for="Nom" class="form-control" readonly />
                    <span asp-validation-for="Nom" class="text-danger"></span>

                    <label class="control-label">Quantité Stock</label>
                    <input asp-for="quantity" class="form-control" readonly />
                    <span asp-validation-for="quantity" class="text-danger"></span>

                    @if(ViewBag.stockage != null)
                    {
                        <div class="alert alert-danger">
                            
                        <h3>
                            <i class="fa-solid fa-circle-exclamation fa-lg" style="color: #e32400;"></i>
                            <samp class="text-danger">@ViewBag.stockage</samp>
                        </h3>
                        </div>

                    }


                    <label class="control-label">Categorie</label>
                    <input asp-for="Categorie" class="form-control" readonly />
                    

                    <label class="control-label">Lieu De Stock </label>
                    <input asp-for="LieuDeStock" class="form-control" readonly />


                    <label asp-for="Prix_unity" class="control-label"></label>
                    <input asp-for="Prix_unity" class="form-control" readonly />
                    <span asp-validation-for="Prix_unity" class="text-danger"></span>

                    <label class="control-label">Quantity Vente</label>
                    <input type="number" name="Qnt_vondre" class="form-control" required />

                    <label class="control-label">Prix Vente</label>
                    <input type="number" name="Prix_Vondre" class="form-control" required />
                    <hr />
                    <div class="buttonsDiv">
                        <input type="submit" value="Vendre" class="btn btn-success" />
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@Model.id">Retour</a>
                        <a class="btn btn-primary" asp-action="Index">Retour Vers La List</a>
                    </div>

                    <hr />
                </div>
            </form>
        </div>
    </div>
</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
