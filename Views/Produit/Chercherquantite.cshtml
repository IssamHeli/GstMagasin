                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.produit.Reference)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.produit.Nom)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.produit.quantity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.QuantiteAchat)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.produit.Prix_unity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TotalAchat) DH
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.QuantiteVente) 
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TotalVonte) Dh
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Profite) Dh
                                        </td>
                                        <td>
                                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.produit.id">Actions</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        }



        @if (@ViewBag.QuantiteNotTrouver == null)
        {


            <table id="dataTableExport" class="table table-striped" hidden>
                <thead>
                    <tr>
                        <th>
                            <samp>Reference</samp>

                        </th>
                        <th>
                            <samp>Nom</samp>
                        </th>
                        <th>
                            <samp>Quantité Stock</samp>
                        </th>
                        <th>
                            <samp>Quantité Achat</samp>
                        </th>

                        <th>
                            <samp>Prix Achat</samp>
                        </th>
                        <th>
                            <samp>Total Des Achats </samp>
                        </th>
                        <th>
                            <samp>Total Des Ventes</samp>
                        </th>
                        <th>
                            <samp>Profite</samp>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.produit.Reference)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.produit.Nom)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.produit.quantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.QuantiteAchat)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.produit.Prix_unity) Dh
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalAchat) DH
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalVonte) Dh
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Profite) Dh
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }


    </div>
</div>

<script>document.addEventListener('DOMContentLoaded', function () {
        const exportBtn = document.querySelector('.btn-primary.export-btn');

        if (exportBtn) {
            exportBtn.addEventListener('click', function () {
                const table = document.getElementById('dataTableExport');
                const currentDate = new Date().toISOString().slice(0, 10);
                const filename = `Produits_Par_Quantity ${currentDate}.xlsx`;
                const wb = XLSX.utils.book_new();

                // Convert table to worksheet
                const ws = XLSX.utils.table_to_sheet(table);

                // Exclude the last column by manipulating the worksheet data
                const range = XLSX.utils.decode_range(ws['!ref']);
                for (let rowNum = range.s.r; rowNum <= range.e.r; rowNum++) {
                    const row = XLSX.utils.encode_row(rowNum);
                    delete ws[`${row}${range.e.c}`];
                }

                XLSX.utils.book_append_sheet(wb, ws, 'Sheet1');

                return XLSX.writeFile(wb, filename);
            });
        } else {
            console.error('Button not found or selector is incorrect.');
        }
    });</script>
