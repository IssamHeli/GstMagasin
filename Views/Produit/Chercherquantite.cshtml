            <div class="alert alert-info">
                <h4><samp class="text-info">@ViewBag.QuantiteChercher</samp></h4>
            </div>

            <p>
                <a class="btn btn-primary export-btn">Exporter</a>
                <a class="btn btn-primary" asp-action="Index">Retour </a>
            </p>

            <div class="LoginDiv">
                <div class="inputField">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        <samp>Reference</samp>

                                    </th>
                                    <th>
                                        <samp>Nom</samp>
                                    </th>
                                    <th>
                                        <samp>Quantité Stock</samp>
                                    </th>
                                    <th>
                                        <samp>Total Quantité Des Achat</samp>
                                    </th>
                                    <th>
                                        <samp>Prix Achat</samp>
                                    </th>
                                    <th>
                                        <samp>Total Des Achats </samp>
                                    </th>
                                    <th>
                                        <samp>Total Quantité Des Ventes </samp>
                                    </th>
                                    <th>
