@model TestHostAppAndBaseDonnes.Models.Produit

@{
    ViewData["Title"] = "Details";
}
<header>
    <nav class="navbar navbar-expand-md  navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Produit" asp-action="Index">
                <img src="~/Images/GestionMagazinLogo.webp" alt="Logo" width="90" height="50" class="d-inline-block align-text-top">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-md-inline-flex justify-content-center">
                <ul class="navbar-nav flex-grow-center">


                    <li class="nav-item">
                        <a class="nav-link  " asp-area="" asp-controller="ProduitAffiche" asp-action="Index"><samp>les articles</samp></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  active" asp-area="" asp-controller="produit" asp-action="Index"><samp>Stock</samp></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  " asp-area="" asp-controller="Magasin" asp-action="Index"><samp>Analyse</samp></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-controller="PlanVondre" asp-action="Index"><samp>PlansVentes</samp></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-controller="PlanAchat" asp-action="Index"><samp>PlansAchats</samp></a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-controller="Acheteur" asp-action="Index"><samp>Magasinier</samp></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-controller="Directeur" asp-action="index"><samp>Profile</samp></a>
                    </li>
                </ul>
            </div>

            <div class="flex-grow-end ">
                <a class="btn btn-danger" asp-controller="Directeur" asp-action="LogOut">Déconnecter</a>
            </div>
        </div>
    </nav>
</header>
<div class="LoginDiv">
    <div class="inputField">
        <div class="alert alert-primary" role="alert">
            <h1><samp class="text-primary">Actions et Details</samp></h1>
        </div>
        <h2>Produit Selectionner</h2>
        <hr />
        <div class="inputField">
            <h4><samp>Informations : </samp> </h4>
            <dl class="row">
                <dt class="col-sm-4">
                    <samp>Référence :</samp>
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Reference)
                </dd>
                <dt class="col-sm-4">
                    <samp>Nom :</samp>
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Nom)
                </dd>
                <dt class="col-sm-4">
                    <samp>Quantité Stock :</samp>
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.quantity)
                </dd>
                <dt class="col-sm-4">
                    <samp>Prix unité :</samp>
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Prix_unity) Dh
                </dd>
                
                <dt class="col-sm-4">
                    <samp>Categorie :</samp>
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Categorie) 
                </dd>

                
                <dt class="col-sm-4">
                    <samp>Lieu De Stock :</samp>
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.LieuDeStock) 
                </dd>
            </dl>

            <hr />

            <div class="buttonsDiv">
                <a class="btn btn-primary" asp-action="AjouterQnt" asp-route-id="@Model.id">Ajouter Quantité</a>
                <a class="btn btn-success" asp-action="Vondre" asp-route-id="@Model.id">Vendre</a>
                <a class="btn btn-info" asp-action="Analyse" asp-route-id="@Model.id">Analyse</a>
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model.id">Modifier</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.id">Supprimer</a>
                <!--<a class="btn btn-primary" asp-action="ChercherNomRetour" asp-route-id=" 'add alobasc here 'Model.Nom">Chercher Par Nom</a>-->
                <a class="btn btn-primary" asp-action="Index">Retour </a>
            </div>
            <hr />
        </div>
    </div>
</div>
