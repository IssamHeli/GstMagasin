<div class="LoginDiv">
    <div class="inputField">
        <div class="alert alert-danger" role="alert">
            <h1><samp class="text-danger">Vous Etes Sure ?</samp></h1>
        </div>
        <h2> Produit a Supprimmer</h2>
        <hr />
        <div class="inputField">
            <h4><samp>Informations :</samp></h4>
            <dl class="row">
                <dt class="col-sm-2">
                    <samp>Nom :</samp>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nom)
                </dd>
                <dt class="col-sm-2">
                    <samp>Quantité Stock :</samp>

                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.quantity)
                </dd>
                <dt class="col-sm-2">
                    <samp>Prix unité :</samp>
                    
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Prix_unity) DH
                </dd>
            </dl>
            <hr />
            <form asp-action="Delete" class="buttonsDiv">
                <input type="hidden" asp-for="id" />
                <input type="submit" value="Oui" class="btn btn-danger" />
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@Model.id">Retour  </a>
                <a class="btn btn-primary" asp-action="Index">Retour Vers La Liste</a>

            </form>
            <hr />
        </div>


    </div>
