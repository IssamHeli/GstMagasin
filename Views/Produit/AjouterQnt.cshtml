<div class="LoginDiv">
    <div class="inputField">

        <div class="alert alert-secondary" role="alert">
            <h1><samp class="text-secondary">Ajouter Nouvaux Quantité </samp></h1>
        </div>
        <div class="inputField">
            <form asp-action="AjouterQnt">
                <h4><samp>Informations :</samp></h4>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <label class="control-label"> Référence</label>
                <input asp-for="Reference" class="form-control" readonly />
                <span asp-validation-for="Reference" class="text-danger"></span>


                <label class="control-label"> Nom</label>
                <input asp-for="Nom" class="form-control" readonly />
                <span asp-validation-for="Nom" class="text-danger"></span>


                <label class="control-label"> Quantité Stock</label>
                <input asp-for="quantity" class="form-control" readonly />
                <span asp-validation-for="quantity" class="text-danger"></span>


                <label class="control-label">Categorie :</label>
                <input asp-for="Categorie" class="form-control" readonly />
                <span asp-validation-for="Categorie" class="text-danger"></span>


                <label class="control-label">Lieu De Stock :</label>
                <input asp-for="LieuDeStock" class="form-control" readonly />
                <span asp-validation-for="LieuDeStock" class="text-danger"></span>


                <label class="control-label"> Prix Unité</label>
                <input type="number" asp-for="Prix_unity" class="form-control" readonly />
                <span asp-validation-for="Prix_unity" class="text-danger" readonly></span>

                <label class="control-label">Nouvaux Quantité</label>
                <input type="number" name="NouvauxQnt1" class="form-control" required />
                <span asp-validation-for="quantity" class="text-danger"></span>

                <br>
                <div class="buttonsDiv">

                    <input type="submit" value="Ajouter" class="btn btn-secondary" />
                    <a class="btn btn-primary" asp-action="Index">Retour Vers La Liste</a>


                </div>
            </form>
        </div>

    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


